{
  "name": "price-drop-widget",
  "version": "1.0.0",
  "description": "Embeddable price drop notification widget",
  "main": "dist/price-drop-widget.umd.js",
  "module": "dist/price-drop-widget.esm.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "npm run clean && npm run build:esm && npm run build:umd && npm run build:minify && npm run size",
    "build:esm": "tsc --module esnext --outDir dist/esm",
    "build:umd": "tsc && node build.js",
    "build:minify": "node minify.js",
    "size": "node check-size.js",
    "clean": "node -e \"require('fs').rmSync('dist', {recursive:true, force:true})\"",
    "dev": "tsc --watch"
  },
  "keywords": ["widget", "price-drop", "notification"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "typescript": "^5.3.0",
    "terser": "^5.26.0"
  }
}
