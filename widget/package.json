{
  "name": "price-drop-widget",
  "version": "1.0.0",
  "description": "Embeddable price drop notification widget",
  "main": "dist/price-drop-widget.min.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "npm run clean && rollup -c && npm run size",
    "build:watch": "rollup -c -w",
    "size": "node check-size.js",
    "clean": "node -e \"require('fs').rmSync('dist', {recursive:true, force:true})\"",
    "dev": "npm run build:watch"
  },
  "keywords": [
    "widget",
    "price-drop",
    "notification"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-typescript": "^12.3.0",
    "rollup": "^2.79.2",
    "rollup-plugin-terser": "^7.0.2",
    "terser": "^5.26.0",
    "tslib": "^2.8.1",
    "typescript": "^5.3.0"
  }
}
