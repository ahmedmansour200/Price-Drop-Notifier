{
    "compilerOptions": {
        "target": "ES2018",
        "module": "ESNext",
        "lib": [
            "ES2018",
            "DOM"
        ],
        "declaration": true,
        "declarationDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "removeComments": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}